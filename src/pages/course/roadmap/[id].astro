---
import { Icon } from 'astro-icon/components'
const roadmap = {
  id: 1,
  title: 'Desarrollo Web Full Stack',
  description:
    'Aprende a crear aplicaciones web completas, desde el frontend hasta el backend',
  topics: [
    {
      title: 'HTML y CSS Fundamentals',
      description: 'Aprende la base de la web',
      completed: true
    },
    {
      title: 'JavaScript Basics',
      description: 'Domina el lenguaje de programaci贸n de la web',
      completed: true
    },
    {
      title: 'React Fundamentals',
      description: 'Crea interfaces de usuario interactivas',
      completed: false
    },
    {
      title: 'Node.js y Express',
      description: 'Construye el backend de tus aplicaciones',
      completed: false
    },
    {
      title: 'Bases de Datos con MongoDB',
      description: 'Almacena y gestiona datos de manera eficiente',
      completed: false
    },
    {
      title: 'Autenticaci贸n y Seguridad',
      description: 'Protege tus aplicaciones web',
      completed: false
    },
    {
      title: 'Despliegue y DevOps',
      description: 'Lleva tus aplicaciones a producci贸n',
      completed: false
    }
  ],
  duration: '6 meses',
  level: 'Principiante a Intermedio'
}
---

<div class="container mx-auto p-8">
  <div class="rounded-lg border border-gray-200 p-6">
    <div>
      <div class="flex items-center justify-between">
        <div>
          <div class="mb-2 text-3xl font-medium">{roadmap.title}</div>
          <div class="text-gray-400">{roadmap.description}</div>
        </div>
        <button class="rounded-xl bg-blue-500 p-4 text-white"
          >Comenzar Roadmap</button
        >
      </div>
    </div>
    <div>
      <div
        class="my-4 flex flex-wrap gap-2 [&>div]:rounded-full [&>div]:bg-gray-200 [&>div]:px-2 [&>div]:text-sm"
      >
        <div>Duraci贸n: {roadmap.duration}</div>
        <div>Nivel: {roadmap.level}</div>
      </div>

      <div class="mt-8 space-y-4">
        <h2 class="mb-4 text-2xl font-semibold">Temas del Roadmap</h2>
        {
          roadmap.topics.map(topic => (
            <div class="flex cursor-grab items-center space-x-4 rounded-lg bg-gray-100 p-4 hover:bg-gray-200">
              {topic.completed ? (
                <Icon
                  name="mdi:check-circle"
                  class="h-6 w-6 flex-shrink-0 text-green-500"
                />
              ) : (
                <Icon
                  name="mdi:circle"
                  class="h-6 w-6 flex-shrink-0 text-gray-500"
                />
              )}
              <div>
                <h3 class="font-semibold">{topic.title}</h3>
                <p class="text-muted-foreground text-sm">{topic.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
