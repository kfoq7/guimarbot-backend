---
import Layout from '@/layouts/Layout.astro'
---

<Layout title="payment">
  <main class="mx-auto max-w-7xl px-4 pt-28">
    <div class="space-y-2">
      <div class="flex gap-x-1">
        <a href="/" class="text-sm"> Home</a>
        <span class="text-sm text-gray-500/80">- Metodo de pago </span>
      </div>

      <h1 class="text-4xl font-bold">Metodo de pago</h1>
    </div>

    <div class="mt-6 grid gap-6 md:grid-cols-[1fr_330px]">
      <div class="h-[50vh] overflow-y-auto rounded-sm py-2">
        <input />
      </div>

      <div class="py-3">
        <div class="h-60 space-y-4 rounded-md bg-gray-400/80 px-4 py-3">
          <div class="flex items-center justify-between">
            <h3 class="text-white">Total estimando</h3>
            <span>S/. 183</span>
          </div>

          <p class="mt-4 text-pretty">
            Sales tax will be calculated during checkout where applicable
          </p>

          <a
            href="/cart/payment"
            class="hover::bg-blue-700 block w-full rounded-md border border-blue-400 bg-blue-500 px-3 py-2 transition-all duration-300 hover:scale-105"
          >
            Continuar con pago
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
