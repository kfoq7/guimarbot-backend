<div id="vanta-bg" class="vanta-container insert-0 absolute">
  <!-- Aquí puedes agregar contenido que irá sobre el efecto -->
</div>

<script>
  import * as THREE from 'three'

  // Esperamos a que el DOM esté completamente cargado
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      // Importamos HALO dinámicamente
      const { default: HALO } = await import('vanta/dist/vanta.halo.min')

      // Inicializamos el efecto
      HALO({
        el: '#vanta-bg',
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 200.0,
        minWidth: 200.0,
        amplitudeFactor: 3.0,
        xOffset: 0.14,
        yOffset: 0.01,
        size: 1.7,
        THREE: THREE
      })
    } catch (error) {
      console.error('Error al cargar el efecto Vanta:', error)
    }
  })
</script>

<style>
  .vanta-container {
    width: 100%;
    height: 100vh;
    position: relative;
  }
</style>
